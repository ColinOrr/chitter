@import url('https://fonts.googleapis.com/css?family=Ubuntu')
@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:300')

slide-width   = 970px
slide-height  = 700px

blue = #2b5797
silver = #edeef3
orange = #e3a21a
purple = #7e3878
green = #1e7145
red = #b91d47

//
//  Mixins

center(width, height)
  position absolute
  left (slide-width / 2) - (width / 2)
  top (slide-height / 2) - (height / 2)
  max-width width
  max-height height
  
tile-color(color)
  border = color - 15%
  background-color color
  border 1px solid border
  if dark(color)
    color #fff
  else
    color #000

transition()
  -webkit-transition arguments
  -moz-transition arguments
  -o-transition arguments
  transition arguments

//
//  Layout

.slide
  position relative
  width slide-width
  max-width none !important
  min-height slide-height

.ghost.step
  display none
  
.code
  .tile
    tile-color silver
    padding 10px
    margin 10px
    margin-bottom 0
    h2
      font-family 'Source Sans Pro', Verdana, sans-serif
      font-size 35px
      font-weight lighter
      margin 0 0 0 5px
    .labels
      text-align right
      .label
        margin-right 2px
  pre
    background none
    border none
    code
      overflow hidden
      font-size 17px
      .comment
        font-size 19px
  .left, .right
    width 50%
    code
      font-size 14px
  .left
    float left
  .right
    float right
    
.text
  h1, p, ul
    font-family Georgia, serif
  h1
    font-size 55px
  p, ul
    font-size 38px
  .blue
    color blue
  .red
    color red
  .green
    color green
  .purple
    color purple
    
//
//  Slides

#chitter
  logo-height = 150px
  logo-width  = 670px
  h1
    font-family 'Ubuntu', sans-serif
    font-size logo-height
    line-height logo-height
    margin 0
    center(logo-width, logo-height + 20)
    img
      height logo-height

#architecture
  .row
    margin-top 25px
    margin-bottom 25px
  hr
    margin-top 40px
    margin-bottom 40px
  .tile
    tile-height = 100px
    display block
    height tile-height
    font-size 12px
    h2
      font-family 'Source Sans Pro', Verdana, sans-serif
      font-size 16pt
      font-weight lighter
      margin 0 0 0 5px
    img
      max-height tile-height - 20
      margin-top 10px
      float right
    .labels
      position absolute
      right 15px
      bottom 5px
      .label
        margin-right 2px
    ul
      list-style none
      margin 5px
      padding 2px
      border-top 1px solid #ddd
      li:before
        content '+ '
    ul.right
      margin-left 50%
      padding-left 10px
      border-top none
      border-left 1px solid #ddd
  img.tile
    height auto
    max-width 100%
    border 1px solid #ccc
  .tile-blue
    tile-color blue
  .tile-silver
    tile-color silver
  .tile-orange
    tile-color orange
  .tile:hover
    text-decoration none
    border 1px solid purple
    box-shadow 0 0 10px purple
      
#tech
  a
    position absolute
    
#node
  div
    center(650px, 600px)
  h1
    text-align right
  p
    text-align justify
    margin-top 40px
    
    
#coffeescript
  > div
    width (slide-width / 2)
    center(slide-width / 2, 150px)

#for-the-cloud
  div
    center(575px, 90px)
    
#in-the-cloud
  div
    center(575px, 125px)
  p
    text-align center

#whats-next
  div
    width 650px
    center(650px, 400px)
  ul
    margin-top 40px

//
//  Impress styling

.impress-enabled
  .step
    opacity 0.3
    transition opacity 1s
  .step.active
    opacity 1

.impress-on-server, .impress-on-client
  #architecture.step
    opacity 1
    
.impress-on-overview
  #chitter.step
    opacity 1

//
//  Fall-back styling

.impress-not-supported
  background #eee
  .slide
    margin 20px auto
    background #fff
    border 1px solid #ccc
    box-shadow 0 0 10px #ccc